{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "XAI_API_KEY": "@xai_api_key"
  },
  "functions": {
    "app/api/excel-analyze/route.ts": {
      "maxDuration": 30
    },
    "app/api/vba-generate/route.ts": {
      "maxDuration": 30
    },
    "app/api/chat/route.ts": {
      "maxDuration": 30
    }
  }
}
